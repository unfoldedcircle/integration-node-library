{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["./*.ts", "./examples/**/*.ts", "./lib/**/*.ts", "./test/**/*.ts", "tsup.config.js"],
  "exclude": ["node_modules", "dist"]
}
